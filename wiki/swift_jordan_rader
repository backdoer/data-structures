//Swift examples Jordan Rader

import UIKit

//recursive function example
func fibonacciNums(i: Int) -> Int {
    if i <= 2 {
        return i
    } else {
        return fibonacciNums(i - 1) + fibonacciNums(i - 2)
    }
}


//swift can use ranges by using ..> and ... to include the upper limit
func sumOfRange(lower: Int, upper: Int) -> String {
    if lower < upper {
        var total = 0
        for i in lower...upper{
            total += i
        }
        return "The total is \(total)"
    } else {
        return "Error: You gotta get it in to get three points"
    }
}


//all standard operators are available in swift
func cashMoney(n: Int) -> String {
    if n > 0 {
        var finalWords = "You have"
        let quarters = n/25
        var leftOvers = n%25

        if quarters == 1 {
            finalWords += ", \(quarters) quarter"
        } else if quarters > 1 {
            finalWords += ", \(quarters) quarters"
        }
        if leftOvers > 0 {
            let dimes = leftOvers/10
            leftOvers = leftOvers%10
            if dimes == 1 {
                finalWords += ", \(dimes) dime"
            } else if dimes > 1 {
                finalWords += ", \(dimes) dimes"
            }
            if leftOvers > 0 {
                let nickels = leftOvers/5
                leftOvers = leftOvers%5

                if nickels == 1 {
                    finalWords += ", \(nickels) nickel"
                } else if nickels > 1 {
                    finalWords += ", \(nickels) nickels"
                }
                if leftOvers > 0 {
                    let pennies = leftOvers

                    if pennies == 1 {
                        finalWords += ", \(pennies) penny"
                    } else if pennies > 1 {
                        finalWords += ", \(pennies) pennies"
                    }
                }
            }
        }
        finalWords += "."
        return finalWords
    }
    return "No money for you"
}
